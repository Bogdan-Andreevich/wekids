

<section class="categories-section">
        <div class="container">
            <div class="row">
            {% for category in categories %}
                 <div class="col-6 col-md-4 col-lg-3">
                                            <a class="category-img-item" href="{{ category.href }}">
                                                <div class="category-img-item_img"><img src="{{ category.image }}" loading="lazy" alt="{{ category.name }}"  width="{{ img_width }}" height="{{ img_height }}" /></div>
                                                <div class="category-img-item_body">
                                                    <div class="category-img-item_title wh">{{ category.name }}</div>
                                                    <div class="category-img-item_btn">Смотреть</div>
                                                </div>
                                                   </a>
                                        </div>
                                            	{% endfor %}
            </div>
        </div>
    </div></section>